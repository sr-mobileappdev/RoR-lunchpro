<% tab 'order history' %>
<% title 'Order History' %>
<%= render partial: "shared/header/#{@ui_space}_header", locals: {restaurant: @restaurant, show_action_menu: true } %>
<div id="global-content-wrapper">
  <!-- history -->
  <div id="history-layout" class="row no-gutters comp__restaurant_order_detail" data-comp-order-load-id="<%= @order.present? ? @order.id : nil %>">
    <div class="col-12 col-md-5 col-lg-4 calendar-orders">
      <div class="vertical-nav fixed-height br-1">
        <div class="vertical-nav-header">
          <section id="order-calendar" class="container">
            <div class="vertical-nav-header">
              <div class="calendar-header row mb-2 pt-3 pb-3">
                <div class="col-1">
                    <a class="fc-today-button" href="#today">Today</a>
                </div>
                <div class="col-12 col-lg-10">
                  <ul class="list-inline text-center mb-0">
                    <li class="list-inline-item pr-3"><a class="fc-prev-button" href="#prev-month"><i class="fa fa-arrow-left"></i></a></li>
                    <li class="list-inline-item"><h5 class="fc-calendar-title"></h5></li>
                    <li class="list-inline-item pl-3"><a class="fc-next-button" href="#next-month"><i class="fa fa-arrow-right"></i></a></li>
                  </ul>
                </div>
              </div>
            <div id="restaurant_calendar" data-restaurant-id="<%= @restaurant.id %>" data></div>
          </section>
        </div>
      <section>
        <div  class="comp__restaurant_order_detail lp__fixed targ-restaurant-orders col-12 p-0" data-comp-order-load-id="<%@order.present? ? @order.id : nil%>" id="scrollable-appointment-container">
          <%= render partial: "restaurant/orders/components/past_orders",
                     locals: {slot_manager: Views::RestaurantOrders.new(@restaurant, @time_range, @consolidated)}  %>
        </div>
      </section>
      </div>
    </div>
    <div class="col-12 col-md-7 col-lg-8 fixed-height comp__restaurant_order_detail p-0" data-comp-order-load-id="<%@order.present? ? @order.id : nil%>">
      <div class="targ__restaurant_order_detail">
        <% if !@order.present? %>
          <div class="col-12 text-center mt-5">
            <h3>Please select an order to view. If none are present, use the calendar to look at a different month's orders!</h3>
            <img src="<%= image_path('headshot_skip.png') %>" alt="Skip The Bear" class="default-skip" />
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
