<!-- floating container with shadow -->
<div id="account-profile" class="b-1 m-3 p-3">
  <div class="col-12">
    <div class="h4 mb-3">Change Password</div>
    <div class="comp__restaurant_form pt-4">
      <%= form_for(@user, :url => { :action => "update_password" }, method: :post ) do |f| %>
        <div class="row pt-4">
          <div class="col-sm-12 col-md-8 col-lg-7 col-xl-5 m-auto">
            <div class="form-group">
              <%= f.label :current_password %><br />
              <input id="current_password" type="password" class="form-control" name="user[current_password]">
              <span toggle="#current_password" class="fa fa-fw fa-eye field-icon toggle-password"></span>   
            </div>
            <div class="form-group">
              <%= f.label :password, "Password" %><br />
              <input id="password" type="password" class="form-control" name="user[password]">
              <span toggle="#password" class="fa fa-fw fa-eye field-icon toggle-password"></span>   
            </div>
            <div class="form-group">
              <label>Paassword Confirmation</label>
              <input id="password_confirmation" type="password" class="form-control" name="user[password_confirmation]">
              <span toggle="#password_confirmation" class="fa fa-fw fa-eye field-icon toggle-password"></span>   
            </div>
          </div>
          <div class="col-12 pt-3 text-center">
            <button type="button" class="btn btn-secondary mr-2 lp__cancel_button" data-comp-detail-tab="profile__summary">Cancel</button>
            <button data-submit type="submit" class="btn btn-primary">Save</button>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

<script>
  $( document ).ready(function() {
    $(".toggle-password").click(function() {
      $(this).toggleClass("fa-eye fa-eye-slash");
      var input = $($(this).attr("toggle"));
      if (input.attr("type") == "password") {
        input.attr("type", "text");
      } else {
        input.attr("type", "password");
      }
    });
  });
</script>
