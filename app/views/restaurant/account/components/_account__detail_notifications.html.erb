                  <input class="form-check-input" type="checkbox" data-hidden-notifs='true' <%= 'checked' if f.object.via_sms['207'].to_i == 1 %>> Text
                </label>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-9">
              <label>Order Feedback</label>
            </div>
            <div class="col-3">
              <div class="form-check form-check-inline">
                <label class="form-check-label <%= 'checked' if f.object.via_email['210'].to_i == 1 %>">
                  <input type="hidden" name="user_notification_pref[via_email][116]" value="<%=f.object.via_email['116'].to_i%>">
