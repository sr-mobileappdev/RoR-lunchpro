              <div class="form-check form-check-inline">
                <label class="form-check-label <%= 'checked' if f.object.via_sms['203'].to_i == 1 %>">
                  <input type="hidden" name="user_notification_pref[via_sms][119]" value="<%=f.object.via_sms['119'].to_i%>">
                  <input type="hidden" name="user_notification_pref[via_sms][203]" value="<%=f.object.via_sms['203'].to_i%>">
                  <input class="form-check-input" type="checkbox" data-hidden-notifs='true' <%= 'checked' if f.object.via_sms['203'].to_i == 1 %>> Text
                </label>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-9">
              <label>Existing Order Updates</label>
