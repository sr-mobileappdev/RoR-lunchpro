<!-- floating container with shadow -->
<div id="account-profile" class="b-1 m-3 p-3 comp__restaurant_notifications">
  <div class="mb-3 mt-4 ml-4">
    <div class="h4 mb-3">Notification Preferences</div>
    <p>Choose to receive email and/or text notifications</p>
    <%= form_for @user_notification_prefs, url: {controller: 'account', action: "update_notification_prefs"}, method: :post,  html: { class: ""} do |f| %>
      <%= lp_hidden_field(f, :user_id) %>
      <%= lp_hidden_field(f, :status) %>
      <%= lp_hidden_field(f, :last_updated_by_id)%>

      <div class="tab-content">
        <div class="tab-pane active" id="orders" role="tabpanel">
          <div class="row pt-2 pb-2">
            <div class="col-9">
              &nbsp;
            </div>
            <div class="col-3">
              (select all that apply)
            </div>
          </div>
          <div class="row">
            <div class="col-9">
              <label>Today's Orders</label>
              <p class="small"></p>
            </div>
            <div class="col-3">
              <div class="form-check form-check-inline">
                <label class="form-check-label <%= 'checked' if f.object.via_email['406'].to_i == 1 %>">
                  <input type="hidden" name="user_notification_pref[via_email][406]" value="<%=f.object.via_email['406'].to_i%>">
                  <input class="form-check-input" type="checkbox" data-hidden-notifs='true' <%= 'checked' if f.object.via_email['406'].to_i == 1 %>> Email
                </label>
              </div>
              <div class="form-check form-check-inline">
                <label class="form-check-label <%= 'checked' if f.object.via_sms['406'].to_i == 1 %>">
                  <input type="hidden" name="user_notification_pref[via_sms][406]" value="<%=f.object.via_sms['406'].to_i%>">
                  <input class="form-check-input" type="checkbox" data-hidden-notifs='true' <%= 'checked' if f.object.via_sms['406'].to_i == 1 %>> Text
                </label>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-9">
              <label>Pending Order Confirmation</label>
              <p class="small"></p>
            </div>
            <div class="col-3">
              <div class="form-check form-check-inline">
                <label class="form-check-label <%= 'checked' if f.object.via_email['408'].to_i == 1 %>">
                  <input type="hidden" name="user_notification_pref[via_email][408]" value="<%=f.object.via_email['408'].to_i%>">
                  <input class="form-check-input" type="checkbox" data-hidden-notifs='true' <%= 'checked' if f.object.via_email['408'].to_i == 1 %>> Email
