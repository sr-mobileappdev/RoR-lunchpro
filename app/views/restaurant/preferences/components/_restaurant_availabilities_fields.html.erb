<div class="p-0 col-6 col-md-2 col-lg form-check justify-content-center align-items-center align-middle restaurant-day <%='restaurant-time-select-unselected' if !(s.object.status == 'active')%>">
  <div class="row justify-content-center m-3">
    <label class="form-check-label justify-content-center restaurant-label <%= 'checked' if (s.object.status == 'active')%>">
      <input class="form-checkbox form-control" type="checkbox" disabled>
        <%= s.object.day[0..2] %>
    </label>
  </div>
  <div class="child-form col justify-content-center text-center">
    <%= lp_hidden_field(s, :day_of_week) %>
    <% if s.object.new_record? %>
      <%= lp_slot_timeframe_field(s, :starts_at, 'none', 60, s.object.starts_at(true) || nil, {hide_label: true, class: "form-control d-inline restaurant-time-select", capitalize_time: true, disabled: true}) %>
      <%= lp_slot_timeframe_field(s, :ends_at, 'none', 60, s.object.ends_at(true) || nil, {hide_label: true, class: "form-control d-inline restaurant-time-select mt-5", capitalize_time: true, disabled: true}) %>
    <% else %>
      <%= lp_slot_timeframe_field(s, :starts_at, 'none', 60, s.object.starts_at(true) || nil, {disabled: true, hide_label: true, class: "form-control d-inline restaurant-time-select", capitalize_time: true}) %>
      <%= lp_slot_timeframe_field(s, :ends_at, 'none', 60, s.object.ends_at(true) || nil, {disabled: true, hide_label: true, class: "form-control d-inline restaurant-time-select mt-5", capitalize_time: true}) %>
    <% end %>
  </div>
</div>