<% if flash[:notice].present? %>
  <div class="alert alert-success" role="alert">
    <a class='lp__close'><span class='oi oi-x' title='close' aria-hidden='true'></span></a>
    <p><%= flash[:notice] %></p>
  </div>
<% elsif flash[:alert].present? %>
  <div class="alert alert-danger" role="alert">
    <a class='lp__close'><span class='oi oi-x' title='close' aria-hidden='true'></span></a>
    <p><%= flash[:alert] %></p>
  </div>
<% end %>
