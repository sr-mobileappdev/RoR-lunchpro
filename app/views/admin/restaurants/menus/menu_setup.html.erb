<%= render partial: 'admin/shared/components/details/back', locals: { url: session[:my_previous_url] } %> <!--menu_items_setup_admin_restaurant_menu_items_path } %>-->
<div class="comp__section-header col-sm-9 offset-sm-3 col-md-10 offset-md-2 comp__new">
  <div class="row">
    <div class="col-8 px-4"><h2 class="lp__light lp__new"><span class="pr-3">Menus</span> <span class="lp__subheader"><%= @restaurant.name %></span></h2></div>
    <div class="col-4 px-4 text-right">
      <div class="btn-toolbar justify-content-end mt-3" role="toolbar" aria-label="Toolbar with buttons">
        <button type="button" class="btn btn-success btn-sm" data-submit aria-label="Create Restaurant"><%= (@record.new_record?) ? 'Create Menu' : 'Save Changes' %></button>
      </div>
    </div>
  </div>
</div>

<div class="comp__content comp__form">
  <%= render partial: 'form' %>
</div>

<div class="comp__content">
  <div class="row">
    <div class="col-12 mt-2">
      <%= render partial: 'admin/shared/components/tables/static_table',
                  locals: {
                    table_actions: [{name: 'New Menu', url: new_admin_restaurant_menu_path(@restaurant)}, {name: 'Import Menu', btn_class: 'btn-secondary', url: new_admin_restaurant_menu_path(@restaurant)}],
                    title: 'Active Menus',
                    columns: ['id', 'name', 'available_time'],
                    model_class: 'Menu',
                    actions: [{title: 'View', path: admin_restaurant_menu_path(@restaurant, "<id>"), button_class: 'btn btn-primary btn-sm'}],
                    objects: @restaurant.menus.where.not(status: ['deleted','inactive'])
                  } %>
    </div>
  </div>
</div>
