
<div class="row">
  <div class="col-8 mt-1">
    <div class="row">
        <%= render partial: 'admin/shared/components/details/show_row',
                    locals: {
                      object: @record.restaurant,
                      fields: [
                        {'name' => {title: 'Restaurant', w: 6, css_class: 'large'}},
                      ]
                    } %>
        <%= render partial: 'admin/shared/components/details/show_row',
                    locals: {
                      object: @record.office,
                      fields: [
                        {'name' => {title: 'Office', w: 6, css_class: 'large'}},
                      ]
                    } %>

    </div>

    <div class="row">
      <div class="col-12 px-3">

        <%= render partial: 'admin/shared/components/tables/menu',
                    locals: { restaurant: @record.restaurant, order: @record, menu: @menu } %>
      </div>
    </div>

  </div>
  <div class="col-4 mt-3" style="border-left: 1px dashed #aaa">
    <h4 class="pt-3 ml-2">Order Details</h4>

    <div class="row">
        <%= render partial: 'admin/shared/components/details/order_summary',
                    locals: {
                      object: @record,
                      fields: [
                        {'office_confirmed' => {title: 'Office Confirmed?', w: 3}},
                        {'rep_confirmed' => {title: 'Rep Confirmed?', w: 3}},
                        {'restaurant_confirmed' => {title: 'Restaurant Confirmed?', w: 4}},
                      ]
                    } %>

    </div>

    <div class="row">
      <div class="col-12 px-4 mt-4">

        <%= render partial: 'admin/shared/components/tables/order_detail',
                    locals: { order: @record } %>

      </div>
    </div>



  </div>
</div>
