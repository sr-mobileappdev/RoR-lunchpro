<% tab 'providers' %>

<%= render partial: 'admin/shared/components/details/back', locals: { url: session[:my_previous_url] } %> <!--admin_office_providers_path(@office) } %>-->

<div class="comp__section-header col-sm-9 offset-sm-3 col-md-10 offset-md-2">
  <div class="row">
    <div class="col-8 px-4">
      <h2 class="lp__light"><span class="pr-3"><%= @record.display_name %></span> <span class="lp__subheader"><%= @office.name %></span></h2>
    </div>
    <div class="col-4 px-4 text-right">
      <div class="btn-toolbar justify-content-end mt-3" role="toolbar" aria-label="Toolbar with button groups">
        <a href="<%= edit_admin_office_provider_path(@office, @record) %>" class="btn btn-primary btn-sm mr-2">Edit</a>
      </div>
    </div>
  </div>
</div>

<div class="comp__content">

  <%= render partial: 'admin/shared/components/flash' %>

  <div class="row">
      <%= render partial: 'admin/shared/components/details/show_row',
                  locals: {
                    object: @record,
                    fields: [
                      {'display_name' => {title: 'Full Name', w: 4}},
                      {'formatted_specialties' => {title: 'Specialties', w: 3}},
                      {'diet_restrictions' => {title: "Provider's Dietary Restrictions", w: 4, helper: 'diet_restrictions_list'}}
                    ]
                  } %>

  </div>

  <div class="row">
    <div class="col-12 mt-2">
      <%= render partial: 'admin/shared/components/tables/availability_calendar',
                  locals: {
                    title: 'Provider Availability',
                    objects: @record.availability_by_day,
                    parent_object: @record
                  } %>
    </div>
  </div>

</div>
