<div class="comp__section-header col-sm-9 offset-sm-3 col-md-10 offset-md-2">
  <div class="row">
    <div class="col-6 px-4"><h2 class="lp__light">Appointments</h2></div>
    <div class="col-6 px-4 text-right">
      <div class="btn-toolbar justify-content-end mt-3" role="toolbar" aria-label="Toolbar with button groups">
      </div>
    </div>
  </div>
</div>

<div class="comp__content">

  <%= render partial: 'admin/shared/components/flash' %>

  <div class="row">
    <div class="col-12">
      <a data-method="post" href="<%= report_admin_appointments_path(scope: 'consolidated') %>" class="btn btn-primary btn-sm pull-right">Export Consolidated CSV</a>
    </div>
    <div class="col-12 mt-2">
      <div class="comp__table">
        <h5 class="lp__table_header">Recent Appointments</h5>
        <a data-method="post" href="<%= report_admin_appointments_path(scope: @scope) %>" class="btn btn-primary btn-sm pull-right">Export To CSV</a>




        <!-- Search Fields Stuff -->





        <!-- Table Filters -->
        <% if @available_scopes && @available_scopes.count > 0 %>
          <div class="lp__table_filters pb-4">
            <ul>
              <% @available_scopes.each do |this_scope| %>
                <li><a class="<%= (@scope && @scope == this_scope[:scope]) ? 'active' : '' %>" href="<%= admin_appointments_path(scope: this_scope[:scope]) %>"><%= this_scope[:title] %></a></li>
              <% end %>
            </ul>
          </div>
        <% end %>
        <!-- END -->

        <div class="lp__pagination targ-table-pagination">
          <div class="is-loading-stickies"></div>
        </div>
        <table class="lp__table table autoload" data-table-url="<%= table_admin_appointments_path(scope: (@scope) ? @scope : nil, search_id: (@search && @search.id) ? @search.id : nil, page: @page, sort: @sort, per_page: @per_page) %>">
          <%= render partial: 'admin/shared/components/tables/loading_content', locals: {message: ''} %>
        </table>

      </div>
    </div>
  </div>

</div>
