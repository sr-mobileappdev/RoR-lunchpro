<div class="comp__section-header col-sm-9 offset-sm-3 col-md-10 offset-md-2 comp__new">
  <div class="row">
    <div class="col-6 px-4"><h2 class="lp__light"><span class="pr-3">Edit Appointment Notes</span></h2></div>
    <div class="col-6 px-4 text-right">
      <div class="btn-toolbar justify-content-end mt-3" role="toolbar" aria-label="Toolbar with buttons">
        <button type="button" class="btn btn-success btn-sm" data-submit aria-label="Save">Save Notes</button>
      </div>
    </div>
  </div>
</div>

<div class="comp__content comp__form">
  <%= form_for @record, url: { action: "update" }, html: { class: "", autocomplete: "off" } do |f| %>

    <div class="row">
      <div class="col-8">

        <div class="form-group row form-group-tight">
          <div class="col-sm-12">
            <%= lp_text_area(f, :rep_notes, "Sales Rep Notes") %>
          </div>
        </div>
        <div class="form-group row form-group-tight">
          <div class="col-sm-12">
            <%= lp_text_area(f, :office_notes, "Office Notes") %>
          </div>
        </div>
        <div class="form-group row form-group-tight">
          <div class="col-sm-12">
            <%= lp_text_area(f, :bring_food_notes, "Food Notes") %>
          </div>
        </div>
        <div class="form-group row form-group-tight">
          <div class="col-sm-12">
            <%= lp_text_area(f, :delivery_notes, "General Delivery Notes") %>
          </div>
        </div>
      </div>
    </div>
  <% end %>

</div>
