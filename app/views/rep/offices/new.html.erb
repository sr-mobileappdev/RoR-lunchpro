<% tab 'offices' %>
<% title 'Offices' %>

<%= render partial: "shared/header/#{@ui_space}_header",locals: {show_action_menu: true}%>
<div class="modal comp__rep_office_new z-0" id="add-office" data-selected-office="<%=@selected_office%>">
  <div class="modal-dialog select-office" role="document">
    <h1 class="sr-only">Add Office</h1>
    <div class="modal-content new-office-modal-content">
      <div class="row bb-1 m-0 list-header">
        <div class="col-1 mt-2 mr-5">
          <a class="btn btn-link ft-bold" href="<%= rep_offices_path %>"><i class="fa fa-arrow-left pr-1"></i> BACK</a>
        </div>
        <div class="col-12 col-lg-9">
          <ul class="nav nav-pills justify-content-center text-center row">
            <li class="nav-item col-sm">
              <a class="nav-link active __select_tab" href="#lunchpro-offices">LunchPro Offices</a>
            </li>
            <li class="nav-item col-sm">
              <a class="nav-link __select_tab" href="#non-lunchpro-offices">Non-LunchPro Office</a>
            </li>
          </ul> 
        </div>
      </div>
      <div class="tab-content">
        <div class="tab-pane active" id="lunchpro-offices" role="tabpanel">
          <p class="my-3 text-center">Add an office to your list that has a calendar LunchPro currently manages</p>
          <div class="modal-body p-0">
            <!-- search form -->
            <%= render  partial: "rep/offices/components/office_search_list",
              locals: {offices: @offices} %>
          </div>
        </div>
        <div class="tab-pane comp__rep_form" id="non-lunchpro-offices" role="tabpanel">
          <%= render  partial: "rep/offices/components/new_office_form",
            locals: {office: @office} %>
        </div>
      </div>
    </div>
  </div>
  <div class="modal-dialog select-office-detail" style="display:none;">
    <div class="modal-content">
      <div class="targ__office_detail">
      </div>
      <div class="targ__office_policies" style="display: none;"></div>
    </div>
  </div>
</div>