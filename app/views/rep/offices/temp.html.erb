<% tab 'offices' %>
<% title 'Offices' %>

<%= render partial: "shared/header/#{@ui_space}_header" %>

<div id="global-content-wrapper" class="container-fluid">
  <!-- office layout -->
  <div id="office-layout" class="row">
      <!-- left column navigation -->
      <div class="col-md-4">
          <a href="#"><i class="fa fa-plus-circle"><!-- add office --></i></a>
          <form>
              <div class="form-check form-check-inline">
                  <label class="form-check-label">
                      <input class="form-check-input" type="radio" name="searchType" value="offices" checked>
                      My Offices
                  </label>
              </div>
              <div class="form-check form-check-inline">
                  <label class="form-check-label">
                      <input class="form-check-input" type="radio" name="searchType" value="providers">
                      Providers
                  </label>
              </div>
              <!-- search form -->
              <div class="input-group">
                  <span class="input-group-addon"><i class="fa fa-search"></i></span>
                  <input type="text">
              </div>
          </form>
          <!-- results loop -->
          <div class="row">
              <div class="col-10">
                  <h2>Name</h2>
                  <p>Title</p>
              </div>
              <div class="col-2">
                  <i class="fa fa-plus"></i>
              </div>
          </div>
          <div class="row">
              <div class="col-10">
                  <h2>Name</h2>
                  <p>Title</p>
              </div>
              <div class="col-2">
                  <i class="fa fa-plus"></i>
              </div>
          </div>
          <div class="row">
              <div class="col-10">
                  <h2>Name</h2>
                  <p>Title</p>
              </div>
              <div class="col-2">
                  <i class="fa fa-plus"></i>
              </div>
          </div>

      </div>
      <!-- right column -->
      <div class="col-md-8">
          <div id="office-profile">
              <div class="row">
                  <div class="col-2">
                      <h1><i class="fa fa-building-o"></i></h1>
                  </div>
                  <div class="col-10">
                      <h2>{{ Office Name }}</h2>
                      <span>{{ Street Address }}</span><br>
                      <span>{{ Office Phone }}</span>
                  </div>
              </div>
              <div class="text-center">
                  <button class="btn btn-primary mr-1" type="button">Reserve Appointment(s)</button>
                  <button class="btn btn-secondary" type="button">View Office Policies</button>
              </div>
              <ul class="nav nav-tabs">
                  <li class="nav-item">
                      <a class="nav-link active" href="#my-appointments">My Appointments</a>
                  </li>
                  <li class="nav-item">
                      <a class="nav-link" href="#about">About</a>
                  </li>
                  <li class="nav-item">
                      <a class="nav-link" href="#my-notes">My Notes</a>
                  </li>
              </ul>
              <div class="tab-content">
                  <div class="tab-pane active" id="my-appointments" role="tabpanel">
                      <h3 class="sr-only">My Appointments</h3>
                      <!-- appointment loop -->
                      <div>
                          <span> {{ appointment date }}</span>
                          <div class="row">
                              <div class="col-1">
                                  <!-- if order is placed -->
                                  <i class="fa fa-hourglass"></i>
                                  <!-- else -->
                                  <i class="fa fa-calendar"></i>
                                  <!-- end if -->
                              </div>
                              <div class="col-9">
                                  <h3>{{ Meal Type }} {{ Meal Time }}</h3>
                                  <span>Suggested Order Count {{ ## }}</span>
                              </div>
                              <div class="col-2">
                                  <!-- if order is placed -->
                                  <button class="btn btn-secondary">View Order</button>
                                  <!-- else -->
                                  <button class="btn btn-secondary">Order Food</button>
                                  <!-- end if -->
                              </div>
                          </div>
                      </div>
                  </div>
                  <div class="tab-pane" id="about" role="tabpanel">
                      <h3 class="sr-only">About this Office</h3>
                      <div class="row">
                          <div class="col-6">
                              <form class="border-1">
                                  <span class="bold">Office Budget</span>
                                  <span> ${{ budget value }} </span>
                                  <a href="#" class="float-right">Edit</a>
                                  <!-- edit
                                  <input type="text">
                                  <input type="submit">Save</form>
                                  -->
                              </form>
                              <div class="border-1">
                                  <span class="bold">Food Preferences</span>
                                  <p>
                                      <!-- food preference loop -->
                                      <span> {{ food preferences }} </span>
                                  </p>
                              </div>
                          </div>
                          <div class="col-6">
                              <div class="border-1">
                                  <span class="bold">Providers</span>
                                  <!-- provider loop -->
                                  <p>{{ provider name }}</p>
                              </div>
                          </div>
                      </div>
                  </div>
                  <div class="tab-pane" id="my-notes" role="tabpanel">
                      <h3 class="sr-only">Notes about this office</h3>
                      <div class="border-1">
                          <p>Click to add your own free form notes about this office.</p>
                          <!-- edit
                          <form>
                              <textarea></textarea>
                              <button class="btn btn-primary">Save</button>
                          </form>
                          -->
                      </div>
                  </div>
              </div>
          </div>
      </div>
  </div>
</div>
