<div class="modal-dialog comp__rep_form" role="document">
  <div class="modal-body">
    <div class="row">
      <div class="col-12 text-center">
        <h3 class="ft-bold">Edit This Office's Information</h3>
      </div>
      <div class="col-12 mt-4">
        <%= form_for @office, url: {controller: 'offices', action: "update"}, method: :put,  html: { class: "", autocomplete: "off" } do |f| %>
          <div class="col-10 offset-1">
            <div class="form-group ft-bold">
                <%= lp_text_field(f, :name, "Office Name") %>
            </div>
            <div class="form-group">
              <%= lp_timezone_select_field(f, :timezone, "Office Timezone") %>
            </div>
            <div class="form-group">
              <%= lp_numeric_field(f, :total_staff_count, "Staff Count", {}, true) %>
            </div>
            <div class="form-group ft-bold">
                <%= lp_text_field(f, :address_line1, "Address") %>
            </div>
            <div class="form-group ft-bold">
                <%= lp_text_field(f, :address_line2, "Suite or Building") %>
            </div>
            <div class="form-group ft-bold">
                <%= lp_text_field(f, :city, "City") %>
            </div>
            <div class="form-group ft-bold">
                <%= lp_text_field(f, :state, "State") %>
            </div>
            <div class="form-group ft-bold">
                <%= lp_text_field(f, :postal_code, "Zip Code") %>
            </div>
            <div class="form-group ft-bold">
                <%= lp_text_field(f, :phone, "Phone Number", f.object.phone, {class: 'form-control form-control-sm phone_number_input'}) %>
            </div>
          </div>
          <div class="text-center mt-4 col-12 col-md-10 col-lg-8 offset-md-1 offset-lg-2">
            <button data-submit type="submit" class="btn btn-primary btn-block">Update</button>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<script>
  LPRepForm_Initializer();
</script> 
