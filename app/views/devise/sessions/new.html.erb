<% tab '' %>
<% title 'Login' %>

<div class="container-fluid">
  <div class="row justify-content-center mt-5">

    <div class="col-10 col-sm-8 col-md-6 col-xl-4">
      <div id="logo-badge"></div>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-group">
          <%= f.label :email %>
          <%= f.email_field :email, autofocus: true, class: 'form-control' %>
        </div>
        <div class="form-group">
          <label>Password</label>
          <input id="password" type="password" class="form-control" name="user[password]">
          <span toggle="#password" class="fa fa-fw fa-eye field-icon toggle-password"></span>        
        </div>
        <%= f.submit "Login to My Account", class: 'btn btn-primary btn-block mb-2' %>
        <%= f.check_box :remember_me %> <%= f.label :remember_me %>
        <%= link_to "Forgot Password?", new_password_path(resource_name), class: 'btn btn-info btn-block mt-4' %>

      <% end %>

      <% if params[:lunchpad] != "true" %>
        <div class="mt-3 hidden-xs-down">
          <%= link_to "New to LunchPro? Sign Up!", new_registration_path(resource_name), class: 'btn btn-outline-info btn-block' %>
        </div>
        <div class="mt-3 hidden-sm-up">
          <%= link_to "Sign Up!", new_registration_path(resource_name), class: 'btn btn-outline-info btn-block' %>
        </div>
      <% end %>
    </div>

  </div>
</div>